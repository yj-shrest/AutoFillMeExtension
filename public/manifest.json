{
    "manifest_version": 3,
    "name": "Auto-Fill Extension",
    "version": "1.0",
    "action": {
      "default_popup": "src/popup/index.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "assets/background.js"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": [
    "http://127.0.0.1/*",
    "http://localhost/*"
  ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["assets/content.js"]
      }
    ]
  }
  